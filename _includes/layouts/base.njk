<!doctype html>
<html lang="ru" class="document">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ renderData.title or title or metadata.title }}</title>
    <meta name="description" content="{{ renderData.description or description or metadata.description }}">
    <link rel="icon" type="image/png" href="/img/favicon/favicon-96x96.png" sizes="96x96" />
    <link rel="shortcut icon" href="/img/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/img/favicon/apple-touch-icon.png" />
    <meta name="apple-mobile-web-app-title" content="OdinSons" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="stylesheet" href="{{ '/css/index.css' | url }}">
    <style>
    {% set css %}{% include "_includes/styles.css.njk" %}{% endset %}{{ css | cssmin | safe }}
    </style>
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
  </head>
  <body class="page {{ templateClass }}">
    <div class="container">
      <header class="header" id="top">
        {% include "_includes/header.njk" %}
      </header>
      {{ content | safe }}
      <footer id="bottom"></footer>
    </div>
  </body>
</html>
